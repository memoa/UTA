<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - UTA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
  <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
    @Html.ActionLink("Udruženje Turističkih Agencija", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">@Html.ActionLink("Agencije", "Index", "Agencies", new { area = "" }, new { @class = "nav-link" })</li>
        <li class="nav-item">@Html.ActionLink("Aranzmani", "Index", "Arrangements", new { area = "" }, new { @class = "nav-link" })</li>
        <li class="nav-item">@Html.ActionLink("O Nama", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
        <li class="nav-item">
          <div class="dropdown">
            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Baza podataka
            </a>

            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              @Html.ActionLink("Agencije", "Index", "AgencyTable", new { area = "" }, new { @class = "dropdown-item" })
              @Html.ActionLink("Aranžmani", "Index", "ArrangementTable", new { area = "" }, new { @class = "dropdown-item" })
              @Html.ActionLink("Destinacije", "Index", "DestinationTable", new { area = "" }, new { @class = "dropdown-item" })
              @Html.ActionLink("Tipovi aranžmana", "Index", "ArrangementTypeTable", new { area = "" }, new { @class = "dropdown-item" })
              @Html.ActionLink("Vrste prevoza", "Index", "TransportationTypeTable", new { area = "" }, new { @class = "dropdown-item" })
              @Html.ActionLink("Usluge", "Index", "ServiceTable", new { area = "" }, new { @class = "dropdown-item" })
            </div>
          </div>
        </li>
      </ul>
      @Html.Partial("_LoginPartial")
    </div>
  </nav>

  <div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
      <p>&copy; @DateTime.Now.Year - Udruženje Turističkih Agencija</p>
    </footer>
  </div>

  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/bootstrap")
  @RenderSection("scripts", required: false)
</body>
</html>
