@model IEnumerable<UTA.Models.Arrangement>

@{
  ViewBag.Title = "Tabela Aranžmani";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="m-2">Tabela Aranžmani</h2>

@Html.ActionLink("Novi Aranžman", "New", "ArrangementTable", new { area = "" }, new { @class = "btn btn-primary m-2" })

<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Id agencije</th>
      <th scope="col">Id destinacije</th>
      <th scope="col">Opis aranžmana</th>
      <th scope="col">Id tipa aranžmana</th>
      <th scope="col">Id prevoza</th>
      <th scope="col">Id usluge</th>
      <th scope="col">Broj dana</th>
      <th scope="col">Broj noćenja</th>
      <th scope="col">Cena</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var arrangement in Model)
    {
    <tr>
      <th scope="row">@arrangement.Id</th>
      <td>@Html.ActionLink(arrangement.AgencyId.ToString(), "Edit", "AgencyTable", new { area = "", id = arrangement.AgencyId }, new { @class = "btn btn-primary" })</td>
      <td>@Html.ActionLink(arrangement.DestinationId.ToString(), "Edit", "DestinationTable", new { area = "", id = arrangement.DestinationId }, new { @class = "btn btn-primary" })</td>
      <td>@arrangement.Description.Substring(0, 50) ...</td>
      <td>@Html.ActionLink(arrangement.ArrangementTypeId.ToString(), "Edit", "ArrangementTypeTable", new { area = "", id = arrangement.ArrangementTypeId }, new { @class = "btn btn-primary" })</td>
      <td>@Html.ActionLink(arrangement.TransportationTypeId.ToString(), "Edit", "TransportationTypeTable", new { area = "", id = arrangement.TransportationTypeId }, new { @class = "btn btn-primary" })</td>
      <td>@Html.ActionLink(arrangement.ServiceId.ToString(), "Edit", "ServiceTable", new { area = "", id = arrangement.ServiceId }, new { @class = "btn btn-primary" })</td>
      <td>@arrangement.ArrangementTypeId</td>
      <td>@arrangement.TransportationTypeId</td>
      <td>@arrangement.ServiceId</td>
      <td>@arrangement.StayDays</td>
      <td>@arrangement.StayNights</td>
      <td>@arrangement.Price</td>
      <td>@Html.ActionLink("Uredi", "Edit", "ArrangementTable", new { area = "", id = arrangement.Id }, new { @class = "btn btn-primary" })</td>
      <td>@Html.ActionLink("Obriši", "Delete", "ArrangementTable", new { area = "", id = arrangement.Id }, new { @class = "btn btn-primary" })</td>
    </tr>
    }
  </tbody>
</table>